  "icon": "assets/betterrailplacement/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "com.meo209.betterrailplacement.client.BetterRailPlacementClient"
    ],
    "main": [
      "com.meo209.betterrailplacement.BetterRailPlacement"
    ]
  },
  "mixins": [
    "betterrailplacement.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
